<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.activity.MineActivity">


    <LinearLayout
        android:id="@+id/patient_relative_titlebar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_220"
        android:background="@drawable/my_background"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20">

            <ImageView
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:layout_marginLeft="@dimen/dp_20"
                android:background="@drawable/common_icon_back_white_n" />

            <ImageView
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_20"
                android:background="@drawable/common_nav_message_white_n" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_24">

            <ImageView
                android:id="@+id/mine_activity_iv_user_head_pic"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:layout_marginLeft="@dimen/dp_20"
                android:background="@drawable/dermatology" />

            <TextView
                android:id="@+id/mine_activity_tv_nick_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_90"
                android:text="猪小妹"
                android:textColor="#ffffff"
                android:textSize="@dimen/sp_16" />

            <Button
                android:id="@+id/mine_activity_btn_login"
                android:layout_width="@dimen/dp_58"
                android:layout_height="@dimen/dp_30"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_20"
                android:background="@drawable/btn_mashanglogin"
                android:text="登录"
                android:textColor="#3087ea" />

            <Button
                android:id="@+id/mine_activity_btn_sign_in"
                android:layout_width="@dimen/dp_58"
                android:layout_height="@dimen/dp_30"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_20"
                android:background="@drawable/btn_mashanglogin"
                android:text="签到"
                android:textColor="#3087ea"
                android:visibility="gone" />

        </RelativeLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_190"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_140"
        android:layout_marginRight="@dimen/dp_20"
        android:background="@drawable/linear_mashangjinru"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_20"
            android:text="我的问诊"
            android:textColor="#333333"
            android:textSize="@dimen/sp_16" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10">

            <ImageView
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:layout_marginLeft="@dimen/dp_20"
                android:background="@drawable/the_current_inquiry" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_90"
                android:text="当前问诊"
                android:textColor="#333333"
                android:textSize="@dimen/sp_14" />

            <ImageView
                android:id="@+id/current"
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_20"
                android:background="@drawable/my_icon_next_n"
                android:textColor="#3087ea" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_24">

            <ImageView
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:layout_marginLeft="@dimen/dp_20"
                android:background="@drawable/historical_inquiry" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_90"
                android:text="历史问诊"
                android:textColor="#333333"
                android:textSize="@dimen/sp_14" />

            <ImageView
                android:id="@+id/history"
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_20"
                android:background="@drawable/my_icon_next_n"
                android:textColor="#3087ea" />

        </RelativeLayout>

    </LinearLayout>


    -

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_350"
        android:layout_marginRight="@dimen/dp_30"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_60"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/file"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:background="@drawable/my_icon_file_n" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="我的档案"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_10" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/mine_activity_linear_my_money"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_60"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:background="@drawable/my_icon_wallet_n" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="我的钱包"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_10" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_60"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:background="@drawable/common_button_collection_large_n" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="我的收藏"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_10" />

            </LinearLayout>

        </RelativeLayout>


        -

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20">


            <LinearLayout
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_60"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:background="@drawable/my_icon_advice_n" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="被采纳的建议"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_10" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_60"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:background="@drawable/my_icon_video_n" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="我的视频"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_10" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_60"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:background="@drawable/my_icon_circle_n" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="我的病友圈"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_10" />

            </LinearLayout>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20">


            <LinearLayout
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_60"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:background="@drawable/common_icon_attention_small_n" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="我的关注"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_10" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_60"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/mine_activity_iv_my_task"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:background="@drawable/my_icon_task_n" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="我的任务"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_10" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_60"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/mine_activity_iv_set_up"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:background="@drawable/my_icon_set_n" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="设置管理"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_10" />

            </LinearLayout>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="©八维移动通信学院毕业作品"
                android:textColor="#666666"
                android:textSize="@dimen/sp_16" />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
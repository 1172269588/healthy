<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.viewpager.widget.ViewPager
        android:layout_width="match_parent"
        android:id="@+id/vp"
        android:layout_height="0dp"
        android:layout_weight="9"
        ></androidx.viewpager.widget.ViewPager>
<LinearLayout
    android:layout_width="match_parent"
    android:background="@drawable/the_bottom_bar"
    android:layout_height="80dp">
    <RadioGroup
        android:id="@+id/rg_main_radioGroup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_main_homepage"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:background="@drawable/radioselect1"
            android:button="@null"
            android:checked="true"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_15"/>

        <RadioButton
            android:id="@+id/rb_main_circle"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_marginBottom="25dp"
            android:background="@drawable/radioselect2"
            android:button="@null"
            android:layout_marginLeft="@dimen/dp_80"/>

        <RadioButton
            android:id="@+id/rb_main_video"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:background="@drawable/radioselect3"
            android:button="@null"
            android:layout_marginLeft="@dimen/dp_80"
            android:layout_marginTop="@dimen/dp_15"/>

    </RadioGroup>

</LinearLayout>

</LinearLayout>